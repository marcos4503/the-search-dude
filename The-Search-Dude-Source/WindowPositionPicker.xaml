<Window x:Class="The_Search_Dude.WindowPositionPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Search_Dude"
        mc:Ignorable="d"
        Title="Screen Position Picker" WindowStyle="None" Icon="/Resources/icon-32px.png" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True" Cursor="SizeAll" Background="#00000000" AllowsTransparency="True">
    <Grid x:Name="root" MinHeight="20" MinWidth="20">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border x:Name="pickerBorder" BorderThickness="4,4,4,4" CornerRadius="0,8,8,8" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#1998D2FF" BorderBrush="#FF98D2FF">
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" IsHitTestVisible="False">
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Rectangle x:Name="arrowRect" Height="32" Width="32" StrokeThickness="0" Fill="#FF98D2FF" Margin="-20,-20,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="45"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle StrokeThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="16"/>
                        <Border x:Name="pickerSubBorder" Background="#FF6FC0FF" CornerRadius="0,0,8,8" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-4,0,-4,-4">
                            <TextBlock x:Name="pickerText" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="128" Text="PlaceHolder PlaceHolder PlaceHolder" Margin="8,8,8,8" Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Window>
