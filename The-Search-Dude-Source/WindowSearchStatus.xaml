<Window x:Class="The_Search_Dude.WindowSearchStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Search_Dude"
        mc:Ignorable="d"
        Title="Search Status" WindowStyle="None" Icon="/Resources/icon-32px.png" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True" IsHitTestVisible="False" Background="{x:Null}" AllowsTransparency="True">
    <Grid Width="280" Height="120">
        <Border BorderBrush="#FF0E4F80" CornerRadius="0,0,8,8" BorderThickness="4,4,4,4" Background="#FF3B8FD0">
            <StackPanel VerticalAlignment="Top">
                <ProgressBar x:Name="progressBar" Height="4" Value="50" VerticalAlignment="Top"/>
                <TextBlock x:Name="searchCountTxt" TextWrapping="Wrap" Text="00/00" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="36" FontWeight="Bold"/>
                <TextBlock x:Name="remainingTimeTxt" TextWrapping="Wrap" Text="00:00" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock x:Name="customStatus" TextWrapping="Wrap" Text="Place Holder" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Margin="8,8,8,0" TextAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
