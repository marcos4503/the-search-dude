        mc:Ignorable="d"
        Title="Key" WindowStyle="None" Icon="/Resources/icon-32px.png" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True" IsHitTestVisible="False" Background="{x:Null}" Foreground="{x:Null}" AllowsTransparency="True">
