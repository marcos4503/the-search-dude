<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Search_Dude"
        xmlns:ValidableTextBox="clr-namespace:The_Search_Dude.Controls.ValidableTextBox" x:Class="The_Search_Dude.MainWindow"
        mc:Ignorable="d"
        Title="The Search Dude" Icon="/Resources/icon-32px.png" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid x:Name="root" Width="360" Height="600">
        <Grid x:Name="coverImage" VerticalAlignment="Top" Height="150">
            <Image x:Name="coverImageBg" VerticalAlignment="Center" Source="/Resources/cover-image.png" Stretch="UniformToFill"/>
        </Grid>
        <Rectangle Height="1" VerticalAlignment="Top" StrokeThickness="0" Fill="#FF9C9C9C" Margin="0,150,0,0"/>
        <ScrollViewer x:Name="prefsScroll" Margin="0,151,0,64">
            <Grid VerticalAlignment="Top">
                <StackPanel x:Name="ctrlParametersList" VerticalAlignment="Top" Margin="8,8,8,0">
                    <GroupBox Header="Automatic Search Preferences" VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Top">
                            <DockPanel x:Name="prefSEUrlToUseRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Search Engine URL To Use" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefSEUrlToUseTxt" Width="128" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" DisplayLabel="False"/>
                            </DockPanel>
                            <DockPanel x:Name="prefDelayForFirstSearchRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Delay For First Search (s)" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefDelayForFirstSearchTxt" Width="128" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" DisplayLabel="False"/>
                            </DockPanel>
                            <DockPanel x:Name="prefCountSubsequentSearchesRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Count Of Subsequent Searches" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefCountSubsequentSearchesTxt" Width="128" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" DisplayLabel="False"/>
                            </DockPanel>
                            <DockPanel x:Name="prefDelayBetweenSearchesRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Delay Of Subsequent Searches (s)" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefDelayBetweenSearchesMaxTxt" DockPanel.Dock="Right" DisplayLabel="False" Width="35"/>
                                <TextBlock TextWrapping="Wrap" Text="max." DockPanel.Dock="Right" Width="26" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefDelayBetweenSearchesMinTxt" Width="35" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" DisplayLabel="False" Margin="0,0,7,0"/>
                                <TextBlock TextWrapping="Wrap" Text="min." HorizontalAlignment="Left" VerticalAlignment="Center" DockPanel.Dock="Right" Width="25"/>
                            </DockPanel>
                            <DockPanel x:Name="prefDoPauseForEachRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Do Pause For Each X Searches" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefDoPauseForEachMaxTxt" DockPanel.Dock="Right" DisplayLabel="False" Width="35"/>
                                <TextBlock TextWrapping="Wrap" Text="max." DockPanel.Dock="Right" Width="26" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefDoPauseForEachMinTxt" Width="35" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" DisplayLabel="False" Margin="0,0,7,0"/>
                                <TextBlock TextWrapping="Wrap" Text="min." HorizontalAlignment="Left" VerticalAlignment="Center" DockPanel.Dock="Right" Width="25"/>
                            </DockPanel>
                            <DockPanel x:Name="prefPauseDurationRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Duration For Needed Pauses (s)" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefPauseDurationMaxTxt" DockPanel.Dock="Right" DisplayLabel="False" Width="35"/>
                                <TextBlock TextWrapping="Wrap" Text="max." DockPanel.Dock="Right" Width="26" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <ValidableTextBox:ValidableTextBox x:Name="prefPauseDurationMinTxt" Width="35" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" DisplayLabel="False" Margin="0,0,7,0"/>
                                <TextBlock TextWrapping="Wrap" Text="min." HorizontalAlignment="Left" VerticalAlignment="Center" DockPanel.Dock="Right" Width="25"/>
                            </DockPanel>
                            <DockPanel x:Name="prefInputsVolumeRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Simulated Inputs Volume" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Grid Width="128" DockPanel.Dock="Right" Height="22" HorizontalAlignment="Center">
                                    <Rectangle Stroke="#FFB3ABAB"/>
                                    <Slider x:Name="prefInputsVolumeSlider" VerticalAlignment="Center" Margin="2,0,2,0" Value="50" Maximum="100" LargeChange="5" SmallChange="1"/>
                                </Grid>
                            </DockPanel>
                            <DockPanel x:Name="prefStopSearchOnMouseMoveRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Stop Searching On Mouse Move" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <CheckBox x:Name="prefStopSearchOnMouseMoveTg" Content="CheckBox" Width="16" Height="16" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" RenderTransformOrigin="0.5,0.5" Margin="0,3,0,3">
                                    <CheckBox.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </CheckBox.RenderTransform>
                                </CheckBox>
                            </DockPanel>
                            <Button x:Name="saveAutoSearchPrefsBtn" Content="Save Changes Here" Height="22" Width="128" Margin="0,16,0,8" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Control Input Parameters" VerticalAlignment="Top" Margin="0,16,0,16">
                        <StackPanel VerticalAlignment="Top">
                            <DockPanel x:Name="schemeSelectorRoot" LastChildFill="False" VerticalAlignment="Top" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="Control Scheme To Use" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <ComboBox x:Name="schemeSelectorCbx" Width="128" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" SelectedIndex="0" Height="22" >
                                    <ComboBoxItem Content="Scheme 1"/>
                                    <ComboBoxItem Content="Scheme 2"/>
                                    <ComboBoxItem Content="Scheme 3"/>
                                </ComboBox>
                            </DockPanel>
                            <DockPanel x:Name="ctrlUrlBarRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="URL Bar Click Point" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button x:Name="ctrlUrlBarHelp" Width="22" DockPanel.Dock="Right" Height="22" Cursor="Help">
                                    <Image Source="/Resources/help-icon.png" Margin="1,1,1,1"/>
                                </Button>
                                <TextBox x:Name="ctrlUrlBarPointY" TextWrapping="Wrap" Text="XXXX"  DockPanel.Dock="Right" Focusable="False" IsEnabled="False" VerticalContentAlignment="Center" Width="44" Margin="0,0,8,0" HorizontalContentAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="x" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Height="16" Margin="2,0,2,2"/>
                                <TextBox x:Name="ctrlUrlBarPointX" TextWrapping="Wrap" Text="XXXX" Width="44"  DockPanel.Dock="Right" Height="22" Focusable="False" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </DockPanel>
                            <DockPanel x:Name="ctrlSEHomeInBarRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="SE Home Page In Search Bar Point" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button x:Name="ctrlSEHomeInBarHelp" Width="22" DockPanel.Dock="Right" Height="22" Cursor="Help">
                                    <Image Source="/Resources/help-icon.png" Margin="1,1,1,1"/>
                                </Button>
                                <TextBox x:Name="ctrlSEHomeInBarPointY" TextWrapping="Wrap" Text="XXXX"  DockPanel.Dock="Right" Focusable="False" IsEnabled="False" VerticalContentAlignment="Center" Width="44" Margin="0,0,8,0" HorizontalContentAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="x" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Height="16" Margin="2,0,2,2"/>
                                <TextBox x:Name="ctrlSEHomeInBarPointX" TextWrapping="Wrap" Text="XXXX" Width="44"  DockPanel.Dock="Right" Height="22" Focusable="False" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </DockPanel>
                            <DockPanel x:Name="ctrlSEHomeOutBarRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="SE Home Pg Out Search Bar Point" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button x:Name="ctrlSEHomeOutBarHelp" Width="22" DockPanel.Dock="Right" Height="22" Cursor="Help">
                                    <Image Source="/Resources/help-icon.png" Margin="1,1,1,1"/>
                                </Button>
                                <TextBox x:Name="ctrlSEHomeOutBarPointY" TextWrapping="Wrap" Text="XXXX"  DockPanel.Dock="Right" Focusable="False" IsEnabled="False" VerticalContentAlignment="Center" Width="44" Margin="0,0,8,0" HorizontalContentAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="x" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Height="16" Margin="2,0,2,2"/>
                                <TextBox x:Name="ctrlSEHomeOutBarPointX" TextWrapping="Wrap" Text="XXXX" Width="44"  DockPanel.Dock="Right" Height="22" Focusable="False" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </DockPanel>
                            <DockPanel x:Name="ctrlSEResultInBarRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="SE Result Page In Search Bar Point" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button x:Name="ctrlSEResultInBarHelp" Width="22" DockPanel.Dock="Right" Height="22" Cursor="Help">
                                    <Image Source="/Resources/help-icon.png" Margin="1,1,1,1"/>
                                </Button>
                                <TextBox x:Name="ctrlSEResultInBarPointY" TextWrapping="Wrap" Text="XXXX"  DockPanel.Dock="Right" Focusable="False" IsEnabled="False" VerticalContentAlignment="Center" Width="44" Margin="0,0,8,0" HorizontalContentAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="x" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Height="16" Margin="2,0,2,2"/>
                                <TextBox x:Name="ctrlSEResultInBarPointX" TextWrapping="Wrap" Text="XXXX" Width="44"  DockPanel.Dock="Right" Height="22" Focusable="False" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </DockPanel>
                            <DockPanel x:Name="ctrlSEResultOutBarRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="SE Result Pg Out Search Bar Point" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button x:Name="ctrlSEResultOutBarHelp" Width="22" DockPanel.Dock="Right" Height="22" Cursor="Help">
                                    <Image Source="/Resources/help-icon.png" Margin="1,1,1,1"/>
                                </Button>
                                <TextBox x:Name="ctrlSEResultOutBarPointY" TextWrapping="Wrap" Text="XXXX"  DockPanel.Dock="Right" Focusable="False" IsEnabled="False" VerticalContentAlignment="Center" Width="44" Margin="0,0,8,0" HorizontalContentAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="x" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Height="16" Margin="2,0,2,2"/>
                                <TextBox x:Name="ctrlSEResultOutBarPointX" TextWrapping="Wrap" Text="XXXX" Width="44"  DockPanel.Dock="Right" Height="22" Focusable="False" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </DockPanel>
                            <DockPanel x:Name="ctrlSEResultLogoRoot" LastChildFill="False" Margin="0,8,0,0">
                                <TextBlock TextWrapping="Wrap" Text="SE Result Page Logo Point" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Button x:Name="ctrlSEResultLogoHelp" Width="22" DockPanel.Dock="Right" Height="22" Cursor="Help">
                                    <Image Source="/Resources/help-icon.png" Margin="1,1,1,1"/>
                                </Button>
                                <TextBox x:Name="ctrlSEResultLogoPointY" TextWrapping="Wrap" Text="XXXX"  DockPanel.Dock="Right" Focusable="False" IsEnabled="False" VerticalContentAlignment="Center" Width="44" Margin="0,0,8,0" HorizontalContentAlignment="Center" />
                                <TextBlock TextWrapping="Wrap" Text="x" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Height="16" Margin="2,0,2,2"/>
                                <TextBox x:Name="ctrlSEResultLogoPointX" TextWrapping="Wrap" Text="XXXX" Width="44"  DockPanel.Dock="Right" Height="22" Focusable="False" IsEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </DockPanel>
                            <Button x:Name="saveCtrlInputParamsBtn" Content="Save Changes Here" Margin="0,16,0,8" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" Width="128"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <Rectangle Height="1" VerticalAlignment="Bottom" StrokeThickness="0" Fill="#FF9C9C9C" Margin="0,150,0,64"/>
        <Button x:Name="startSearchBtn" Content="Start Searching!" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="32" Width="128" Margin="0,0,0,18" Cursor="Hand"/>
        <TextBlock TextWrapping="Wrap" Text="created with ❤️ by Marcos Tomaz in 2025" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="8" Foreground="#FFB7B7B7" Margin="0,0,0,4"/>

    </Grid>
</Window>
